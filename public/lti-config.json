{
  "title": "Canvas Section Management Tool",
  "scopes": [
    "https://purl.imsglobal.org/spec/lti-ags/scope/lineitem",
    "https://purl.imsglobal.org/spec/lti-ags/scope/result.readonly",
    "https://purl.imsglobal.org/spec/lti-ags/scope/score",
    "https://purl.imsglobal.org/spec/lti-nrps/scope/contextmembership.readonly",
    "https://canvas.instructure.com/lti/account_lookup/scope/show"
  ],
  "extensions": [
    {
      "domain": "your-domain-here.vercel.app",
      "tool_id": "canvas-section-tool",
      "platform": "canvas.instructure.com",
      "settings": {
        "text": "Section Management",
        "placements": [
          {
            "text": "Section Management Tool",
            "enabled": true,
            "placement": "course_navigation",
            "message_type": "LtiResourceLinkRequest",
            "target_link_uri": "https://your-domain-here.vercel.app/lti/launch",
            "canvas_icon_class": "icon-group"
          },
          {
            "text": "Manage Sections",
            "enabled": true,
            "placement": "account_navigation",
            "message_type": "LtiResourceLinkRequest",
            "target_link_uri": "https://your-domain-here.vercel.app/lti/launch",
            "canvas_icon_class": "icon-settings"
          }
        ]
      }
    }
  ],
  "public_jwk_url": "https://your-domain-here.vercel.app/.well-known/jwks.json",
  "target_link_uri": "https://your-domain-here.vercel.app/lti/launch",
  "oidc_initiation_url": "https://your-domain-here.vercel.app/api/auth/lti/login"
} 